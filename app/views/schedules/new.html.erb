<body id = "budy">
    <div id = "marginalized">
        <h1 id = "h12">Tell us about your schedule.</h1>

        <div id = "middleBox">
            <%= form_for @schedule, url: {action: "create"} do |f| %>
              <p id = "h22">What subjects do you want to take?</p>
              <%= f.text_area :subjects, value: "" %>

              <p id = "h22">What time do you want to start and end classes?</p>
              <%= f.time_field :time_start %>
              <p id = "h23">&nbsp;Until&nbsp;</p>
              <%= f.time_field :time_end %>

              <p id = "h22">Monday/Saturday classes?</p>
              <%= f.check_box(:mon_class) %>
              <%= label_tag(:mon_class, "Monday") %>
              <%= f.check_box(:sat_class) %>
              <%= label_tag(:sat_class, "Saturday") %>

              <p id = "h22">Max. number of consecutive classes?</p>
              <%= f.number_field :breaks %>

              <%= f.submit %>
            <% end %>
        </div>
    </div>
</body>
